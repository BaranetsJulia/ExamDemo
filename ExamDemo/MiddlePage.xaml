<Page x:Class="ExamDemo.MiddlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MiddlePage" MinWidth="250" MinHeight="250">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="30" Width="130" Click="DM_Button" Background="Gray">Управление данными</Button>
            <Label></Label>
            <Button Height="30" Width="130" Click="Filtr_Button" Background="Gray">Фильтрация данных</Button>
            <Label></Label>
            <Button x:Name="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="30" 
                    Click="Can_Click">Выход</Button>
        </StackPanel>
    </Grid>
</Page>
